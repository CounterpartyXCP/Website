---
const currentYear = new Date().getFullYear();

const aboutLinks = [
  { label: "What is Counterparty?", href: "/about" },
  { label: "Team", href: "/team" },
  { label: "Roadmap", href: "/roadmap" },
];

const resourceLinks = [
  { label: "Documentation", href: "https://docs.counterparty.io/" },
  { label: "API", href: "https://counterpartycore.docs.apiary.io/" },
  { label: "GitHub", href: "https://github.com/CounterpartyXCP" },
];

const communityLinks = [
  { label: "Twitter", href: "https://twitter.com/CounterpartyXCP" },
  { label: "Telegram", href: "https://t.me/Counterparty_XCP" },
  { label: "Forum", href: "https://forums.counterparty.io/" },
];
---

<footer class="bg-gray-100 py-12 font-readex-pro">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div>
        <h5 class="text-lg font-semibold mb-4">About Counterparty</h5>
        <ul class="space-y-2">
          {aboutLinks.map((link) => (
            <li><a href={link.href} class="text-gray-600 hover:text-counterparty-red transition duration-300">{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div>
        <h5 class="text-lg font-semibold mb-4">Resources</h5>
        <ul class="space-y-2">
          {resourceLinks.map((link) => (
            <li><a href={link.href} class="text-gray-600 hover:text-counterparty-red transition duration-300">{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div>
        <h5 class="text-lg font-semibold mb-4">Community</h5>
        <ul class="space-y-2">
          {communityLinks.map((link) => (
            <li><a href={link.href} class="text-gray-600 hover:text-counterparty-red transition duration-300">{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div>
        <h5 class="text-lg font-semibold mb-4">Stay Updated</h5>
        <p class="text-gray-600 mb-4">Subscribe to our newsletter for the latest updates and news.</p>
        <a href="/subscribe" class="bg-counterparty-red hover:bg-red-600 text-white font-bold py-2 px-4 rounded transition duration-300">Subscribe</a>
      </div>
    </div>
    <hr class="my-8 border-gray-300">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-600 mb-4 md:mb-0">&copy; 2014 - {currentYear} Counterparty.</p>
      <div class="space-x-4">
        <a href="/terms-of-service" class="text-gray-600 hover:text-counterparty-red transition duration-300">Terms of Service</a>
        <a href="/privacy-policy" class="text-gray-600 hover:text-counterparty-red transition duration-300">Privacy Policy</a>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    font-family: 'Readex Pro', system-ui, sans-serif;
  }

  h5 {
    font-weight: 600;
  }

  a {
    text-decoration: none;
    transition: color 0.3s ease;
  }

  a:hover {
    color: #e91e63 !important;
  }

  .btn-primary {
    background-color: #e91e63;
    border-color: #e91e63;
  }

  .btn-primary:hover {
    background-color: #d81b60;
    border-color: #d81b60;
  }
</style>
