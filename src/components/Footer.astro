        <ul class="space-y-2">
          {aboutLinks.map((link) => (
            <li><a href={link.href} class="text-gray-600 hover:text-counterparty-red transition duration-300">{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div>
        <h5 class="text-lg font-light text-blue-900 mb-4">Resources</h5>
        <ul class="space-y-2">
          {resourceLinks.map((link) => (
            <li><a href={link.href} class="text-gray-600 hover:text-counterparty-red transition duration-300">{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div>
        <h5 class="text-lg font-light text-blue-900 mb-4">Community</h5>
        <ul class="space-y-2">
          {communityLinks.map((link) => (
            <li><a href={link.href} class="text-gray-600 hover:text-counterparty-red transition duration-300">{link.label}</a></li>
          ))}
