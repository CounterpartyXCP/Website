---
const currentYear = new Date().getFullYear();

const aboutLinks = [
  { label: "What is Counterparty?", href: "/about" },
  { label: "Team", href: "/team" },
  { label: "Roadmap", href: "/roadmap" },
];

const resourceLinks = [
  { label: "Documentation", href: "https://docs.counterparty.io/" },
  { label: "API", href: "https://counterpartycore.docs.apiary.io/" },
  { label: "GitHub", href: "https://github.com/CounterpartyXCP" },
];

const communityLinks = [
  { label: "Twitter", href: "https://twitter.com/CounterpartyXCP" },
  { label: "Telegram", href: "https://t.me/Counterparty_XCP" },
  { label: "Forum", href: "https://forums.counterparty.io/" },
];
---

<footer class="bg-light py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-3 mb-4 mb-md-0">
        <h5 class="mb-3">About Counterparty</h5>
        <ul class="list-unstyled">
          {aboutLinks.map((link) => (
            <li><a href={link.href} class="text-muted">{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div class="col-md-3 mb-4 mb-md-0">
        <h5 class="mb-3">Resources</h5>
        <ul class="list-unstyled">
          {resourceLinks.map((link) => (
            <li><a href={link.href} class="text-muted">{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div class="col-md-3 mb-4 mb-md-0">
        <h5 class="mb-3">Community</h5>
        <ul class="list-unstyled">
          {communityLinks.map((link) => (
            <li><a href={link.href} class="text-muted">{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div class="col-md-3">
        <h5 class="mb-3">Stay Updated</h5>
        <p class="text-muted">Subscribe to our newsletter for the latest updates and news.</p>
        <a href="/subscribe" class="btn btn-primary">Subscribe</a>
      </div>
    </div>
    <hr class="my-4">
    <div class="row">
      <div class="col-md-6">
        <p class="mb-0 text-muted">&copy; 2014 - {currentYear} Counterparty.</p>
      </div>
      <div class="col-md-6 text-md-end">
        <a href="/terms-of-service" class="text-muted me-3">Terms of Service</a>
        <a href="/privacy-policy" class="text-muted">Privacy Policy</a>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    font-family: 'Readex Pro', system-ui, sans-serif;
  }

  h5 {
    font-weight: 600;
  }

  a {
    text-decoration: none;
    transition: color 0.3s ease;
  }

  a:hover {
    color: #e91e63 !important;
  }

  .btn-primary {
    background-color: #e91e63;
    border-color: #e91e63;
  }

  .btn-primary:hover {
    background-color: #d81b60;
    border-color: #d81b60;
  }
</style>