---
const currentYear = new Date().getFullYear();

const aboutLinks = [
  { label: "What is Counterparty?", href: "/#whatiscounterparty" },
  { label: "Wallets", href: "/#wallets" },
  { label: "Explorers", href: "/#explorers" },
  { label: "Marketplaces", href: "/#marketplaces" },
  // { label: "Team", href: "/team" },
  // { label: "Roadmap", href: "/roadmap" },
];

const resourceLinks = [
  { label: "Documentation", href: "https://docs.counterparty.io/" },
  { label: "API", href: "https://counterpartycore.docs.apiary.io/" },
  { label: "GitHub", href: "https://github.com/CounterpartyXCP" },
];

const communityLinks = [
  { label: "Twitter", href: "https://twitter.com/CounterpartyXCP" },
  { label: "Telegram", href: "https://t.me/+hgJVFwSbZUkxYjgx" },
  { label: "Forum", href: "https://forums.counterparty.io/" },
