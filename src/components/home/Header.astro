---
import { client } from "../../../tina/__generated__/client";
import BlockCountdown from "../BlockCountdown";

const headerResponse = await client.queries.header({ relativePath: "header.md" });
const header = headerResponse.data.header;

// Function to add line breaks
function addLineBreaks(text: string, wordsPerLine = 4) {
  const words = text.split(' ');
  const lines = [];
  for (let i = 0; i < words.length; i += wordsPerLine) {
    lines.push(words.slice(i, i + wordsPerLine).join(' '));
  }
  return lines.join(' ');
}
---

<header class="py-5 mt-16 bg-no-repeat bg-right bg-contain h-[550px]" style="background-image: url('/images/header_bg.png');">
  <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 h-full">
    <div class="flex flex-col lg:flex-row items-center h-full">
      <div class="lg:w-7/12">
        <h1 class="text-blue-900 font-readex-pro text-5xl font-normal leading-tight tracking-tighter mb-4 max-w-xl" set:html={addLineBreaks(header.title)} />
        <div class="flex flex-wrap gap-2 mb-4">
          {header.ctaButtons?.map((button) => (
            <a href={button?.link} class="btn-custom">{button?.label}</a>
          ))}
        </div>
      </div>
      <div class="lg:w-5/12">
        <BlockCountdown client:load />
      </div>
    </div>
  </div>
</header>

<style>
  .btn-custom {
    @apply text-white font-readex-pro text-base font-normal py-3.5 px-5.5 bg-counterparty-red hover:bg-red-600 transition-colors duration-300 rounded;
    text-edge: cap;
    font-feature-settings: 'ss02' on;
  }

  /* For browsers that support it */
  @supports (font-variant-alternates: styleset(ss02)) {
    .btn-custom {
      font-variant-alternates: styleset(ss02);
    }
  }
</style>
