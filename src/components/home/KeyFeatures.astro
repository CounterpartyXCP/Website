---
interface Feature {
  title?: string | null;
  description?: string | null;
}

interface Props {
  keyFeatures?: (Feature | null)[] | null;
}

const { keyFeatures = [] } = Astro.props;
---

<section class="key-features">
  <ul>
    {keyFeatures?.map((feature) => (
      <span>{feature?.title}{feature?.description}</span>
    ))}
  </ul>
</section>

<style>
  .key-features {
    margin-top: 2rem;
  }
  h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }
  ul {
    list-style-type: none;
    padding: 0;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
  }
  li {
    flex-basis: calc(33.333% - 2rem);
    margin: 1rem;
    padding: 1rem;
    background-color: #f5f5f5;
    border-radius: 8px;
  }
  h4 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }
  p {
    font-size: 1rem;
  }
</style>